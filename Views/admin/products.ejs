<%- include('../_layouts/adminHeader') %>

<h2 class="page-title">Products</h2>
<a href="/admin/Product/addProduct" class="btn btn-primary">Add a new product</a>
<br><br>

<% if(count>0) {%>

<table class="table table-striped">
    <thead>
        <tr class="home">
            <th>Title</th>
            <th>Price</th>
            <th>Category</th>
            <th>Product Image</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
        <% for(var product of products){ %>
        <tr>
            <td><%= product.title %></td>
            <td><%= parseFloat(product.price).toFixed(2) %>/=</td>
            <td><%= product.category %></td>
            <td>
                <% if(product.images == "") {%>
                    <img id="imageView" src="/images/noimage.png"/>
                <% } else {%>
                    <img id="imageView" src="/product_images/<%= product.id %>/<%= product.images  %>"/>
                <% }%>
            </td>
            <td><a href="/admin/product/EditProduct/<%= product.id %>">Edit</a></td>
            <td><a href="/admin/product/DeleteProduct/<%= product.id %>">Delete</a></td>
        </tr>
        <% }%>
    </tbody>
</table>

<% } else {%>
    <h3 class="text-center">There are no product!</h3>
<% }%>

<%- include('../_layouts/adminFooter') %>