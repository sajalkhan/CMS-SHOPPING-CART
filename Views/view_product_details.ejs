<% include _layouts/header %>

<div class="row">
    
    <h1 class="page-header"><%= title %></h1>
    
    <div class="col-xs-12 col-md-5">
        <img class="spi" src="/product_images/<%= product.id %>/<%= product.images %>" alt="">
        <br>
    </div>
    <div class="col-xs-12 col-md-7">
        <p><%= product.description %></p>
        <p>$<%= parseFloat(product.price).toFixed(2) %></p>
        <% if (loggedIn) { %>
            <p><a href="/cart/add/<%= product.slug %>">Add to cart</a></p>
        <% } else {%>
            <p>You must be logged in to purchase items.</p>
        <% } %>
    
    </div>
    <div class="col-xs-12">
        <ul class="gallery">
            <% for( var image of galleryImages ) { %>
            <% if (image != "thumbs") { %>
            <li>
                <a data-fancybox="gallery" href="/product_images/<%= product.id %>/gallery/<%= image %>">
                    <img src="/product_images/<%= product.id %>/gallery/thumbs/<%= image %>" alt="">
                </a>
            </li>
            <% } %>
            <% } %>
        </ul>
    </div>
</div>

<% include _layouts/footer %>